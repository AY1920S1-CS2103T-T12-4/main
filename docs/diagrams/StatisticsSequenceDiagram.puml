@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":StatsCommand" as StatsCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":model" as Model MODEL_COLOR
end box


[-> StatsCommand : execute(model)
activate StatsCommand

loop for each predicate
    StatsCommand -> Model : updateFilteredFlashCardList(predicate)
    activate Model
    StatsCommand <-- Model : list
    deactivate Model

     StatsCommand -> StatsCommand : size()
     activate StatsCommand
     StatsCommand <-- StatsCommand : number
     deactivate StatsCommand

end

StatsCommand -> Model : getStats()
activate Model
StatsCommand <-- Model : stats
deactivate Model


[<--StatsCommand
deactivate StatsCommand
@enduml